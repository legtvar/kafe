{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Playground",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Playground/bin/Debug/net7.0/Kafe.Playground.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/Api/bin/Debug/net7.0/Kafe.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "sourceLinkOptions": {
                "*": {
                    "enabled": true
                }
            }
        },
        {
            "name": "Projection Rebuild",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/Api/bin/Debug/net7.0/Kafe.Api.dll",
            "args": [
                "projections",
                "-r",
                "-p",
                "AccountInfo"
            ],
            "cwd": "${workspaceFolder}/Api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to Staging",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "ssh",
                "pipeArgs": [
                    "-T",
                    "kafe.fi.muni.cz",
                    "docker",
                    "exec",
                    "-i",
                    "kafe-staging-api-1",
                    "sh",
                    "-c"
                ],
                "debuggerPath": "/root/vsdbg/vsdbg"
            },
            "sourceFileMap": {
                "/kafe/src": "${workspaceRoot}"
            },
            "justMyCode": false
        }
    ]
}
