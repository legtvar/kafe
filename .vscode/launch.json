{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Playground",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Playground/bin/Debug/net7.0/Kafe.Playground.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/Api/bin/Debug/net7.0/Kafe.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "sourceLinkOptions": {
                "*": {
                    "enabled": true
                }
            }
        },
        {
            "name": "ArtifactDetail rebuild",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/Api/bin/Debug/net7.0/Kafe.Api.dll",
            "args": ["projections", "-r", "-p", "AuthorInfo"],
            "cwd": "${workspaceFolder}/Api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to Production",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "ssh",
                "pipeArgs": ["-T", "lemma-new", "docker", "exec", "-i", "kafe_api_1", "sh", "-c"],
                "debuggerPath": "~/vsdbg/vsdbg"
            },
            "sourceFileMap": {
                "/kafe/src": "${workspaceRoot}"
            },
            "justMyCode": false
        }
    ]
}
